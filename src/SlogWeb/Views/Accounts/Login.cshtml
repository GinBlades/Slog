@model LoginViewModel
@{ 
    ViewData["Title"] = "Sign In";
}

<form asp-controller="Accounts" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <h3>Sign in.</h3>
    <div asp-validation-summary="All"></div>
    <ol>
        <li>
            <label asp-for="EmailOrUserName"></label>
            <input asp-for="EmailOrUserName" />
            <span asp-validation-for="EmailOrUserName"></span>
        </li>
        <li>
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </li>
        <li>
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" />
                @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </li>
        <li>
            <button type="submit">Sign In</button>
        </li>
    </ol>
</form>