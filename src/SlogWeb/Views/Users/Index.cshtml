@using SlogWeb.ViewModels
@model List<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Count > 0) {
    <table class="table table-striped">
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Roles</th>
            <th></th>
        </tr>
        @foreach (var user in Model) {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", @user.RoleNames)</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@user.Id">Details</a>
                        <a class="btn btn-default" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id"
                           data-delete data-confirm="Are you sure you want to delete this user?" data-return-url="@Context.Request.Path">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </table>
}